<!DOCTYPE html>
<html>
  <head>
    <title>Doctor Registration</title>
    <script src="./js/admin.js"></script>
    <link rel="stylesheet" href="./css/admin.css" />
  </head>

  <body>
    <form method="post" id="insertionForm">
      <div class="radio">
        <input type="radio" name="role" id="doctorRadio" value="Doctor" />
        <label for="doctorRadio">Doctor</label><br />

        <input
          type="radio"
          name="role"
          id="pharmacistRadio"
          value="Pharmacist"
        />
        <label for="pharmacistRadio">Pharmacist</label><br />
      </div>
      <!-- Username Field -->
      <label for="Id">Id:</label>
      <input type="number" id="id" name="id" required /><br /><br />

      <!-- Password Field -->
      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
      /><br /><br />

      <!-- User Details -->
      <label for="name">Full Name: </label>
      <input type="text" id="name" name="name" /><br /><br />

      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="For doctor only"
      /><br /><br />

      <label for="spec">Specialization:</label>
      <input
        type="text"
        id="spec"
        name="spec"
        placeholder="For doctor only"
      /><br /><br />

      <label for="exp">Experiance:</label>
      <input
        type="text"
        id="exp"
        name="exp"
        placeholder="For doctor only"
      /><br /><br />

      <label for="Age">Age:</label>
      <input
        type="number"
        id="age"
        name="age"
        placeholder="For doctor only"
      /><br /><br />

      <button class="submit-button" type="submit">SUBMIT</button>
    </form>
  </body>
</html>
